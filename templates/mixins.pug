//- Experiences are the molecular unit of the resume. They are what the markdown
    files in the source directory compile in to.
mixin experience(exp)
  section.experience.cf.mv3
    //- Position
    h3.f3.mv1.fw6= exp.title
    //- Metadata
    ul.w-33-ns.w-33-p.fl-ns.fl-p.list.ml0.pl0.lh-title.f5.mt1.fw2
      //- Place of Work
      li.fw5
        if exp.url
          a.link.dark-gray.underline-hover(href=exp.url)= exp.subtitle
        else
          = exp.subtitle
      //- Time
      li
        time(datetime=moment.utc(exp.startDate))= moment.utc(exp.startDate).format("MMM YYYY")
        | &#032;&ndash;&#032;
        if exp.endDate
          time(datetime=moment.utc(exp.endDate))= moment.utc(exp.endDate).format("MMM YYYY")
        else
          | Present
      //- Location
      if exp.location
        li= exp.location

    //- Contents
    if exp.contents
      .w-66-ns.w-66-p.fr-ns.fr-p.mt1
        .measure.lh-title.mt0.f5
          != exp.contents
